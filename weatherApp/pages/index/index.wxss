.temp {
  text-align: center;
  font-size: 200rpx;
  line-height: 280rpx;
  opacity: 0.8
}

.weather {
  text-align: center;
  font-size: 30rpx;
  line-height: 58rpx;
  opacity:0.65;
}

.weather-wrapper {
  position: relative;
  padding-top: 174rpx;
  padding-bottom: 250rpx;
}

.location-wrapper {
  position: absolute;
  top: 30rpx;
  bottom: 30rpx;
  left: 0;
  right: 0;
  color: rgba(0, 0, 0, 0.5);
}

.location {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx; 
}

.location-icon {
  width: 21rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.location-text {
  font-size: 30rpx;
  line-height: 42rpx;
}

.location-tip {
  font-size: 30rpx;
  line-height: 42rpx;
  text-align: center;
}

.weather-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.today {
  border-top:2px solid rgba(0, 0, 0, 0.1); 
  position: absolute;
  bottom: 0;
  left: 40rpx;
  right: 40rpx;
  display: flex;
  height: 90rpx;
  align-items: center;
  font-size: 30rpx;
  line-height: 42rpx;
}

.today-date {
  opacity: 0.5;
}

.today-temp {
  opacity: 0.5;
  flex-grow: 1;
  padding-right:20rpx; 
  text-align: right;
}

.arrow {
  width: 13rpx;
  height: 24rpx;
}

.timetips {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx
}

.timetips-icon {
  width: 36rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.timetips-text {
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
}

.forecast-weather-scoll{
  height: 353rpx;
}

.forecast-weather {
  display: flex;
  margin-top: 45rpx;
}

.forecast-weather-item {
  display: flex;
  width:120rpx;
  flex-shrink: 0;
  flex-direction:column;
  align-items: center;
}

.forecast-weather-item-time {
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.8
}

.forecast-weather-item-icon {
  padding-top:50rpx;
  padding-bottom:50rpx;  
  width:60rpx;
  height: 60rpx;
}

.forecast-weather-item-temp {
  font-size: 40rpx;
  line-height: 56rpx;
  opacity: 0.8
}